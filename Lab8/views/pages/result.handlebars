<h1>Shows Found</h1>
<h2>{{search_term}}</h2>
<section>
    {{#if shows.length}}
    <ul class="show-list">
        {{#each shows}}
        <li>
            <a href="/show/{{this.id}}">{{this.name}}</a>
        </li>
        {{/each}}
    </ul>
    {{else}}
        <p class="show-not-found">We're sorry, but no results were found for {{search_term}}.</p>
    {{/if}}
    <a href="/">Make another search</a>
</section>
